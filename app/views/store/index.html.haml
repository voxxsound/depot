%h1 
	= I18n.t 'layout.main.title'

- @products.each do |product|
	.entry
		= image_tag(product.image_url)
		%h3
			=h product.title
		= product.description
		.price-line
		%span.price
			= number_to_currency(product.price)
			- form_remote_tag :url => {:action => 'add_to_cart', :id => product } do
				= submit_tag I18n.t('layout.main.button.add')