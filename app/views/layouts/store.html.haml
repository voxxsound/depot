%html
	%head
		%title PragProg Books Online Store
		= stylesheet_link_tag "depot", :media => "all"
		= javascript_include_tag :defaults
	%body#store
		#banner
			- form_tag '', :method => 'GET', :class => 'locale' do
				= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale), :onchange => 'this.form.submit()'
				= submit_tag 'submit'
				= javascript_tag "$$('.locale input').each(Element.hide)"
			= image_tag("logo.png")
			= @page_title || "Pragmatic Bookshelf"
		#columns
			#side
				- if @cart
					#cart 
						- hidden_div_if(@cart.items.empty?, :id => "cart") do
							= render(:partial => "cart", :object => @cart)
				%a{:href => "http://localhost:3000/store"} Home
				%br
				%a{:href => "http://localhost:3000/info/who_bought/4"} XML export
				%br
				%a{:href => "http://www...."} News
				%br
				%a{:href => "http://www...."} Contact
				<br />
				- if session[:user_id]
					<br />
					= link_to 'Orders', :controller => 'orders'
					<br />
					= link_to 'Products', :controller => 'products'
					<br />
					= link_to 'Users', :controller => 'users'
					<br /><br />
					= link_to 'Logout', :controller => 'admin', :action => 'logout'
			#main
				- if flash[:notice]
					#notice
						= flash[:notice]
				= yield :layout